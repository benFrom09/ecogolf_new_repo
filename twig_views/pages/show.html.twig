{% extends "layout.html.twig" %}
{% block content %}
<section class="pt-12 container is-fluid mb-60 blog">
    <div class="blog-container mt-85">
        <div class="blog-title">
            <h2 class="title is-3 text-center">{{_article.title}}</h2>
        </div>
        <div class="blog-content columns">
            <div class="blog-author text-center w-100">
                <span class="author p-half">{{_article.author}}</span>
                <time class="time p-half" datetime="{{article.date}}">{{_article.date|date('d-m-Y')}}</time>
            </div>
            <div class="article column is-12">
                {% if _article.image %}
                <div class="blog-image mb-35">
                    <img src="/storage/blog/{{_article.image}}" alt="">
                </div>
                {% endif %}
                <div class="blog-text">
                    <p>{{ hasLink(_article.content,"is-default-link")|striptags('<a></a>')|raw }}</p>
                </div>
            </div>
        </div>        
    </div>
</section>
{% endblock %}